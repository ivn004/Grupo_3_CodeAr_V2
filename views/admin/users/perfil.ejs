<html lang="en">
<!-- HEAD -->
<%- include("../partials/head.ejs") %>
  <!-- HEAD -->

  <body>
    <!-- HEADER -->
    <%- include("../partials/header.ejs") %>
      <!-- HEADER -->
      <div class="perfil container-fluid row">
        <div class="bienvenido-user col-10">
          <img src="/images/avatares/<%= usuario.avatar %> " alt="">
          <h1>Bienvenido, <%= usuario.nombre %>
          </h1>
          <p>Administra tu información y las opciones de privacidad y seguridad a fin de que Codear sea más relevante
            para
            ti.</p>
        </div>
        <div class="datos-user">
          <h2>Mis datos</h2>
          <h3>Datos de Cuenta</h3>
          <div class="cajaUser row">
            <h3 class="col-5">Usuario</h3>
            <h4 class="col-5">
              <%= usuario.nombre %>
            </h4>
            <p class="col-2"><a href="/users/edit">Editar</a></p>
          </div>
          <div class="cajaUser row">
            <h3 class="col-5">E-mail</h3>
            <h4 class="col-5">
              <%= usuario.email %>
            </h4>
            <p class="col-2"><a href="#">Editar</a></p>
          </div>
          <!-- <div class="cajaUser row">
            <h3 class="col-5">Clave</h3>
            <h4 class="col-5">
              <%= /* usuario.password */ %>
            </h4>
            <p class="col-2"><a href="#">Editar</a></p>
          </div> -->
          <h3>Datos Personales</h3>
          <div class="cajaUser row">
            <h3 class="col-5">Telefono</h3>
            <h4 class="col-5">
              <%= usuario.telefono %>
            </h4>
            <p class="col-2"><a href="#">Editar</a></p>
          </div>

        </div>
      </div>

      <!-- FOOTER -->
      <%- include("../partials/footer") %>
        <!-- FOOTER -->

  </body>

</html>